<a id="update_<%= update.id %>"></a>
<%- if update.is_advice_request? %>
  <%- text = 'campaigns.show.user_requested_advice' %>
<%- else %>
  <%- text = 'campaigns.show.added_an_update' %>
<%- end %>
<span class="thread-item campaign-update">
  <span class="num"><%= index %></span>
  <span class="title"><%= raw t(text, :name => h(update.user.name)) %></span>
  <span class="close">close</span>
  <span class="date">
    <%= update.created_at.localtime.to_s(:standard_with_date) %>
  </span>
  <%= render :partial => 'campaigns/campaign_event_permalink', :locals => {:event => event} %>
</span>

<div class="thread-details">
	<div class="thread-copy"><%= raw simple_format(sanitize(update.text)) %></div>
	<div class="thread-furniture">
		<div class="thumb"><a href="<%= profile_url(update.user) %>"><img src="<%= update.user.profile_photo.url(:large_thumb) %>" alt="" /></a>
		  <%= raw role_flags(update.user) %>
		</div>
		
	</div>
</div>