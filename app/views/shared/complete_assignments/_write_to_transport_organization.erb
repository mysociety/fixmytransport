<span class="thread-item write-to-transport-organization">
  <span class="num"><%= index %>
  </span>
  <span class="title"><%= t('campaigns.show.wrote_to_orgs', :orgs => assignment.data[:organizations].map{ |organization| organization[:name] }.to_sentence, :name => assignment.user.name) %>
  </span>
  <span class="close">close</span>
  <span class="date"><%= event.created_at.localtime.to_s(:standard_with_date) %>
  </span>
  <%= render :partial => 'campaigns/campaign_event_permalink', :locals => {:event => event} %>
</span>
<div class="thread-details">
	<div class="thread-copy">
		<p><%= t('campaigns.show.here_is_the_letter', :name => assignment.user_name) %></p>
		<p><strong><%= assignment.problem.subject %></strong></p>
		<%= raw simple_format(sanitize(assignment.problem.description)) %>
	</div>
	<div class="thread-furniture">
		<div class="thumb"><a href="<%= profile_url(assignment.user) %>"><img src="<%= assignment.user.profile_photo.url(:large_thumb) %>" alt="" /></a>
			<%= raw role_flags(assignment.user) %>
		</div>
	
	</div>
</div>