<span class="thread-item comment">
  <span class="num"><%= index %></span>
  <span class="title">
  <%= raw comment_header(comment) %>
  </span>
  <span class="close">close</span>
  <span class="date">
    <%= comment.created_at.localtime.to_s(:standard_with_date) %>
  </span>
  <%= render :partial => 'campaigns/campaign_event_permalink', :locals => {:event => event} %>
</span>
<div class="thread-details">
	<div class="thread-copy">
		<%= raw simple_format(sanitize("#{comment.text}")) %>
	</div>
	<div class="thread-furniture">
		<div class="thumb"><a href="<%= profile_url(comment.user) %>"><img src="<%= comment.user.profile_photo.url(:large_thumb) %>" alt="" /></a>
		  <%= raw role_flags(comment.user) %>
		</div>
	</div>
</div>